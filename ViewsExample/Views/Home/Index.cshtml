@using ViewsExample.Models;
@{
    string appdemo = "title of Page";

           
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="myapp">@appdemo</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <h1>
        Welcome to My Page
        
    </h1>
    @* @Html.Raw(alertMessage); *@
    @{
        List<Person> people = (List<Person>?)ViewData["people"];
    }
    @foreach (var person in people)
    {
        <h1>Name: @person.Name</h1>
        if (person.DateOfBirth.HasValue)
        {
            
        <h1>Date Of Birth:  @person.DateOfBirth.Value.ToString("dd/MM/yyyy")</h1>
    
        }
        <h1>Gender: @person.PersonGender</h1>
    }

</body>
</html>